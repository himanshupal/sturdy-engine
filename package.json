{
  "name": "sturdy-engine",
  "version": "0.1.0",
  "packageManager": "yarn@4.5.3",
  "private": true,
  "description": "REST API server for video upload and processing",
  "repository": "git@github.com:himanshupal/sturdy-engine.git",
  "author": {
    "name": "Himanshu Pal",
    "email": "mailtohimanshupal@gmail.com",
    "url": "https://github.com/himanshupal"
  },
  "scripts": {
    "dev": "NODE_ENV=development yarn exec nodemon src/index.ts",
    "start": "NODE_ENV=production node -r @swc-node/register src",
    "pre-commit": "lint-staged",
    "prepare": "yarn exec husky",
    "test": "NODE_ENV=test yarn exec jest --setupFiles=dotenv/config"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@paralleldrive/cuid2": "^2.2.2",
    "@prisma/client": "^6.0.1",
    "dayjs": "^1.11.13",
    "express": "^4.21.2",
    "fluent-ffmpeg": "^2.1.3",
    "multer": "^1.4.5-lts.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@swc-node/register": "^1.10.9",
    "@swc/core": "^1.10.1",
    "@trivago/prettier-plugin-sort-imports": "^5.2.0",
    "@types/express": "^5.0.0",
    "@types/fluent-ffmpeg": "^2",
    "@types/jest": "^29.5.14",
    "@types/multer": "^1",
    "@types/node": "^22.10.2",
    "@types/supertest": "^6.0.2",
    "dotenv": "^16.4.7",
    "eslint": "^9.16.0",
    "globals": "^15.13.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.11",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "prisma": "^6.0.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.0"
  },
  "lint-staged": {
    "*.{json,md,html,js,ts}": [
      "yarn exec prettier --write --cache --log-level error",
      "eslint"
    ]
  }
}
